<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:paddingTop="@dimen/space_listview"
    android:paddingBottom="@dimen/space_listview">

    <ImageView
        android:id="@+id/comm_img"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:adjustViewBounds="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/comm_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="我不是标题党"
                android:textColor="@color/title_gray"
                android:textSize="@dimen/space_16" />
            <TextView
                android:id="@+id/comm_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="更多>"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_gray"
                android:visibility="gone"
                android:textSize="@dimen/space_12" />

            <TextView
                android:id="@+id/comm_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:text="￥67-91元"
                android:layout_alignParentRight="true"
                android:textColor="@color/top_back"
                android:textSize="@dimen/space_14" />
        </RelativeLayout>

        <TextView
            android:id="@+id/comm_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text="详情摘要的提示"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/space_12" />

        <TextView
            android:id="@+id/comm_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:text="10:12"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/space_12"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>